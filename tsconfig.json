{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "bundler",
    "experimentalDecorators": true,
    "target": "es2020",
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "sourceMap": true,
    "paths": {
      "@contracts/*": [
        "./hardhat/deployments/localhost/*",
        "./hardhat/deployments/mumbai/*",
        "./hardhat/deployments/ganache/*",
        "./hardhat/artifacts/contracts/*"
      ]
    }
  },
  "exclude": [
    "node_modules"
  ]
}